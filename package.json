{
  "name": "Dealers-N-Deals-MarketPlace",
  "version": "1.0.0",
  "description": "MERN ecommerce and rating app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules backend/server.js",
    "server": "nodemon --experimental-modules backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node --experimental-modules backend/seeder.js",
    "data:destroy": "node --experimental-modules backend/seeder.js -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"    "install": "cd frontend && npm install && npm run build && cd ..",
    "install": "cd frontend && npm install && npm run build && cd .."

  },
  "author": "Daniel Kamar",
  "license": "MIT",
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.12"
  }
}
